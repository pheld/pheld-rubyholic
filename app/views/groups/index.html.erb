<h1>Rubyholic</h1>

<% form_tag groups_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table border=1>
<% for group in @groups %>
  <tr>
    <td><%= link_to group.name, group %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New group', new_group_path %>
